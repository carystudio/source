/dts-v1/;

#include "mt7628an.dtsi"
#include <dt-bindings/input/input.h>

/ {
	compatible = "mediatek,IP04296", "mediatek,mt7628an-soc";
	model = "MediaTek IP04296 EVB";

	chosen {
		bootargs = "console=ttyS0,57600";
	};

	gpio-leds {
                compatible = "gpio-leds";
                 wlan {
			label = "IP04296:amber:wlan";
			gpios = <&gpio1 12 1>;
			default-state = "off";
                };
		cpu {
                        label = "IP04296:amber:status";
                        gpios = <&gpio0 11 1>;
                        default-state = "off";
		};
        };
	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;
		
		wps {
                        label = "wps";
                        gpios = <&gpio1 13 1>;
                        linux,code = <KEY_WPS_BUTTON>;
                };	

                reset {
                        label = "reset";
                        gpios = <&gpio1 6 1>;
                        linux,code = <KEY_RESTART>;
                };

	};
};

&spi0 {
	status = "okay";

	m25p80@0 {
                #address-cells = <1>;
                #size-cells = <1>;
                compatible = "jedec,spi-nor";
                reg = <0>;
                spi-max-frequency = <10000000>;
		m25p,chunked-io = <32>;

                partition@0 {
                        label = "u-boot";
                        reg = <0x0 0x30000>;
                        read-only;
                };

                partition@30000 {
                        label = "u-boot-env";
                        reg = <0x30000 0x10000>;
                        read-only;
                };

                factory: partition@40000 {
                        label = "factory";
                        reg = <0x40000 0x10000>;
                        read-only;
                };

                partition@50000 {
                        label = "firmware";
                        reg = <0x50000 0x800000>;
                };
	};
	spidev@1 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "linux,spidev";
		reg = <1>;
		spi-max-frequency = <10000000>;
	};
};

&uart1 {
	status = "okay";
};

&i2c {
	status = "okay";
};

&ethernet {
	mtd-mac-address = <&factory 0x4>;
};

&sdhci {
	status = "okay";
};

&pcie {
	status = "okay";
};

&wmac {
	status = "okay";
};

&pinctrl {
        default_state: pinctrl0 {
                gpio {
                        ralink,group = "i2c", "gpio", "wled_an", "wdt", "uart1";
                        ralink,function = "gpio";
                };
        };
};

